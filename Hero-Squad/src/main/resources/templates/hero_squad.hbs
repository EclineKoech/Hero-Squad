{{#partial "title" }}
    Your Squads and Heroes
{{/partial}}


{{#partial "content"}}

<div class="hero_squad">
{{#if hero}}
    <h3>Name:{{hero.name}}</h3>
    <h3>Age:{{hero.age}}</h3>
    <h3>Special Power:{{hero.power}}</h3>
    <h3>Weakness:{{hero.weakness}}</h3>

</div>


{{else}}

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">No Heroes😦</h5>
            <a href="/hero" class="btn btn-primary">Add  Hero  👍</a>
        </div>
    </div>
    {{/if}}

{{/partial}}

{{> layout.hbs}}