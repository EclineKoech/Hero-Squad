{{#partial "title"}}

<h1> Create Hero</h1>
{{/partial}}

{{#partial "content"}}

    <div class="home">
        <div class="container px-4">
            <div class="row gx-5">
                <div class="col-md-6">
                    <div class="p-3">
                        <figure class="figure">
                            <img src="/images/supa.jpg" class="figure-img img-fluid rounded"  alt="...">
                            <figcaption class="figure-caption"></figcaption>
                        </figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border bg-light">
                        <h2 class="text-center">Create a new Hero</h2>
                        <form action='/hero_squad' method="post">
                            <div class="form-group" class="hero">
                                <label for="name">Hero name</label>
                                <input id="name" name="content" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="age">Age</label>
                                <input id="age" name="age" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="power">Special Powers</label>
                                <input id="power" name="power" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="weakness">Weakness</label>
                                <input id="weakness" name="weakness" class="form-control" type="text">
                            </div>
                            <div>
                                <button type="submit" class="btn btn-transparent text-white">Create Hero</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

{{/partial}}

{{>layout.hbs}}

