{{#partial "title" }}
    Your Squads and Heroes
{{/partial}}


{{#partial "content"}}

    <div class="squad_hero">
    {{#if squad}}
            <h3>Name:{{squad.name}}</h3>
            <h3>Size:{{squad.size}}</h3>
            <h3>Cause:{{squad.cause}}</h3>

        </div>


    {{else}}

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">No Squads😦</h5>
                <a href="/squad" class="btn btn-primary">Add  Squad  👍</a>
            </div>
        </div>
    {{/if}}

{{/partial}}

{{> layout.hbs}}