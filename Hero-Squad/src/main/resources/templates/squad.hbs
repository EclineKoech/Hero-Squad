{{#partial "title"}}
    Create your Squad!
{{/partial}}

{{#partial "content"}}
    <div class="home">
        <div class="container px-4">
            <div class="row gx-5">
                <div class="col-md-6">
                    <div class="p-3">
                        <figure class="figure">
                            <img src="/images/squad3.jpg" class="figure-img img-fluid rounded"  alt="...">
                            <figcaption class="figure-caption"></figcaption>
                        </figure>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border bg-light">
                        <h1>Create your Squad!</h1>
                        <form action='/squad_hero' method="post">
                            <div class="form-group" class="squad">
                                <label for="name">Your Squad Name</label>
                                <input id="name" name="name" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="size">Max Size</label>
                                <input id="size" name="size" class="form-control" type="text">
                            </div>
                            <div class="form-group">
                                <label for="cause">Cause</label>
                                <input id="cause" name="cause" class="form-control" type="text">
                            </div>
                            <button type="submit" class="btn">Create Squad!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


{{/partial}}

{{> layout.hbs}}