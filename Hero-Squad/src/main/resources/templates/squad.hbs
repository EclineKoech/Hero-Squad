{{#partial "title"}}
    Create your Squad!
{{/partial}}

{{#partial "content"}}
    <h1>Fill in the form to create your Squad!</h1>
    <form action='/squad_hero' method="post">
        <div class="form-group" class="squad">
            <label for="name">Your Squad Name</label>
            <input id="name" name="name" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="size">Max Size</label>
            <input id="size" name="size" class="form-control" type="text">
        </div>
        <div class="form-group">
            <label for="cause">Cause</label>
            <input id="cause" name="cause" class="form-control" type="text">
        </div>
        <button type="submit" class="btn">Create Squad!</button>
    </form>
{{/partial}}

{{> layout.hbs}}